<% date = resource.release_date || resource.first_air_date %>

<div class="card movie-or-tv-card">
  <div class="d-flex">
    <% if resource.poster_path %>
      <img src="https://image.tmdb.org/t/p/w92/<%= resource.poster_path %>" class="img-fluid rounded-start h-100">
    <% else %>
      <div class="movie-or-tv-image-placeholder">
        <%= icon('fas', 'image', class: 'text-black-50 fa-2x') %>
      </div>
    <% end %>

    <div class="card-body d-flex flex-column justify-content-center">
      <h5 class="card-title mb-0"><%= resource.title || resource.name %></h5>

      <% if date.present? %>
        <p class="card-text text-muted mb-0"><%= l Date.parse(date), format: :long %></p>
      <% end %>

      <% if resource.overview.present? %>
        <p class="card-text movie-or-tv-overview"><%= resource.overview %></p>
      <% end %>
    </div>
  </div>
</div>
