<%= render 'search_input' %>

<div class="row g-4">
  <div class="col-md-3">
    <div id="search-filter">
      <%= render 'filter' %>
    </div>
  </div>

  <div class="col-md-9">
    <div id="search-results">
      <%= render_result(@results) %>
    </div>

    <div id="paginator" class="d-flex justify-content-center">
      <%= paginate @results %>
    </div>
  </div>
</div>
