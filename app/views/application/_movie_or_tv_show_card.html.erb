<% date = movie_or_tv_show_date(resource) %>

<div class="card movie-or-tv-card">
  <div class="d-flex">
    <% if resource.poster_path.present? %>
      <img src="https://image.tmdb.org/t/p/w92/<%= resource.poster_path %>" class="img-fluid rounded-start h-100">
    <% else %>
      <div class="movie-or-tv-image-placeholder">
        <%= icon('fas', 'image', class: 'text-black-50 fa-2x') %>
      </div>
    <% end %>

    <div class="card-body d-flex flex-column justify-content-center overflow-hidden">
      <%= link_to 'javascript:;', class: 'text-decoration-none', data: { 'bs-toggle': 'modal', 'bs-target': "##{generate_modal_id(resource)}" } do %>
        <h5 class="card-title"><%= movie_or_tv_show_name(resource) %></h5>
      <% end %>

      <% if date %>
        <p class="card-text text-muted mb-0"><%= l date, format: :long %></p>
      <% end %>

      <% if resource.overview.present? %>
        <p class="card-text movie-or-tv-overview"><%= resource.overview %></p>
      <% end %>
    </div>
  </div>
</div>

<%= render 'movie_or_tv_show_modal', resource: resource %>
